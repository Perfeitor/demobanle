        <MudTd DataLabel="Tiền đổi điểm" Style="text-align:right">@(string.IsNullOrEmpty(context["Tiendoidiem"].ToString()) ? "0" : Convert.ToDecimal(context["Tiendoidiem"]).ToString("#,##0"))</MudTd>
        <MudTd DataLabel="Ck nhóm" Style="text-align:right">@(string.IsNullOrEmpty(context["Tiencknhomhang"].ToString()) ? "0" : Convert.ToDecimal(context["Tiencknhomhang"]).ToString("#,##0"))</MudTd>
        <MudTd DataLabel="Ck ngành" Style="text-align:right">@(string.IsNullOrEmpty(context["Tiencknganhhang"].ToString()) ? "0" : Convert.ToDecimal(context["Tiencknganhhang"]).ToString("#,##0"))</MudTd>
        <MudTd DataLabel="Ck đơn hàng" Style="text-align:right">@(string.IsNullOrEmpty(context["Tienckdonhang"].ToString()) ? "0" : Convert.ToDecimal(context["Tienckdonhang"]).ToString("#,##0"))</MudTd>
        <MudTd DataLabel="Tiền mặt" Style="text-align:right">@(string.IsNullOrEmpty(context["Tienmat"].ToString()) ? "0" : Convert.ToDecimal(context["Tienmat"]).ToString("#,##0"))</MudTd>
